{
  "type": "module",
  "name": "ts-uni",
  "version": "1.0.0-beta.2",
  "description": "Typescript utilities",
  "keywords": [
    "typescript",
    "utilities"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cross-env NODE_ENV=development tsup src/index.ts --watch",
    "build": "cross-env NODE_ENV=production tsup src/index.ts",
    "pub": "npm run build && npm publish --access public",
    "release": "release-it"
  },
  "author": {
    "name": "Trong Duong",
    "email": "duongductrong06@gmail.com",
    "url": "https://github.com/duongductrong"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): :bookmark: v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/duongductrong/ts-uni"
  },
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "cross-env": "^7.0.3",
    "release-it": "^17.6.0",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
